{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}
    <div class="form-group container">
        <h1>Your profile</h1>
        {{ form_start(profileForm) }}
        <div class="label">
            {{ form_label(profileForm.age, 'Age:') }}
        </div>
        <div class="input">
            {{ form_widget(profileForm.age) }}
        </div>
        <div class="label">
            {{ form_label(profileForm.gender, 'Gender:') }}
        </div>
        <div class="input">
            {{ form_widget(profileForm.gender) }}
        </div>
        <div class="label">
            {{ form_label(profileForm.bio, 'Bio:') }}
        </div>
        <div class="input">
            {{ form_widget(profileForm.bio) }}
        </div>
        {{ form_widget(profileForm) }}
            
            <div class="col-md-1">
                <input type='submit' name='submit' value='Save' class='form-control'></input>
           </div>
        {{ form_end(profileForm) }}
    </div>

    <div class="form-group container">
        Username: {{ app.user.username }}<br>
        Age: {{ app.user.age }}<br>
        Gender: {{ app.user.gender }}<br>
        Bio: {{ app.user.bio }}
    </div>
{% endblock %}
